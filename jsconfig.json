{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "checkJs": true,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "paths": {
      "@/*": ["./src/*", "./dist/*", ""],
      "pages/*": ["src/pages/*"],
      "components/*": ["src/components/*"],
      "types/*": ["src/@types/*"],
      "public/*": ["public/*"]
    },
    "types": ["vite/client"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}

